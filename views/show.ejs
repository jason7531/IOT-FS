<%- include("partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">KAPA</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= product.image %>" style="width: 100%;" />
                    <div class="caption">
                        <h4 class="pull-right">$10</h4>
                        <h4>
                            <a href="">
                                <%= product.name %>
                            </a>
                        </h4>
                        <p>
                            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Id praesentium dolor voluptatum velit unde. Deserunt dicta quia veniam, optio expedita ab et beatae, ullam, voluptatem quae illo nostrum reiciendis harum?
                        </p>
                        <% inventories.forEach(function(inventory) { %>
                            <div class="col-lg-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title"></h5>
                                        <p class="card-text">
                                            Inventory by
                                            <%= inventory.author.username %>
                                        </p>
                                        <form action="/index/<%= product._id %>/inventory" method="POST">
                                            <p></p>
                                            <input type="text" name="inventory[id]" value="<%= inventory._id %>" />
                                            <button class="btn btn-success">Go</button>
                                        </form>
                                        <!-- <a href="/index/<%= product._id %>/inventory" class="btn btn-outline-success btn-sm">Add <%= product.name %> to inventory</a
                > -->
                                        <a href="" class="btn btn-outline-danger btn-sm"><i class="fa fa-heart-o" aria-hidden="true"></i
                ></a>
                                        <a href="" class="btn btn-outline-info btn-sm"><i class="fa fa-info" aria-hidden="true"></i
                ></a>
                                    </div>
                                </div>
                            </div>
                            <% }) %> >
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("partials/footer") %>